@using Microsoft.AspNetCore.Authentication;
@model ShaTaskApp.Models.Entities.Cashier

@{
    ViewBag.Title = "View Cashier";
}


<section class="ftco-section">
    <div class="container bg-infdo w-50">

        <div class="row justify-content-center ">
            <div class="col-md-12 col-lg-10">

                <div class="login-wrap p-4 p-md-5 ">
                    <div class="d-flex ">
                        <div class="w-100">
                            <h3 class="mb-4">Cashier Details</h3>
                        </div>

                    </div>
                    <form method="post" class="signin-form">

                        <div class="form-group mb-3">
                            <label class="label" asp-for="FirstName">First Name</label>
                            <input type="text" disabled class="form-control" asp-for="FirstName"  value="@Model.FirstName">
                        </div>
                        <div class="form-group mb-3">
                            <label class="label" asp-for="LastName">Last Name</label>
                            <input type="text" disabled class="form-control" asp-for="LastName" value="@Model.LastName">
                        </div>
                        <div class="form-group mb-3">
                            <label class="label" asp-for="PhoneNumber">Phone Number</label>
                            <input type="text" disabled class="form-control" asp-for="PhoneNumber" value="@Model.PhoneNumber">
                        </div>

                 
                    </form>


                </div>
            </div>
        </div>
    </div>

</section>



