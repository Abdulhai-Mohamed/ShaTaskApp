@using Microsoft.AspNetCore.Authentication;
@using ShaTaskApp.Models.Business
@model ShaTaskApp.Models.Business.CreateProduct

@{
    ViewBag.Title = "Create Product";
}


<section class="ftco-section">
    <div class="container bg-infdo w-50">

        <div class="row justify-content-center ">
            <div class="col-md-12 col-lg-10">

                <div class="login-wrap p-4 p-md-5 ">
                    <div class="d-flex ">
                        <div class="w-100">
                            <h3 class="mb-4">Create Product</h3>
                        </div>

                    </div>
                    <form method="post" class="signin-form">

                        <div class="form-group mb-3">
                            <label class="label" asp-for="Name">Name</label>
                            <input type="text" class="form-control" asp-for="Name" placeholder="Name" required>
                            <span class="validate-color" asp-validation-for="Name"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label class="label" asp-for="Description">Description</label>
                            <input type="text" class="form-control" asp-for="Description" placeholder="Description" required>
                            <span class="validate-color" asp-validation-for="Description"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label class="label" asp-for="Price">Price</label>
                            <input type="text" class="form-control" asp-for="Price" placeholder="Price" required>
                            <span class="validate-color" asp-validation-for="Price"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label class="label" asp-for="Category">Category</label>
                            <select class="form-select" aria-label="Default select example"
                                    asp-for="Category"
                                    asp-items="Html.GetEnumSelectList<ProductCategories>()">
                                <option value="">Please Select Category</option>

                                @*Notice, we are using asp-items tag helper to bind Department select list to Dept enum
                                also note that the method by defautlt set the 0value is the selected value so at enum we reassign the
                                first value as 1 not 0 by default, because we want 0 set to the please select option

                                *@
                            </select>                        
                            <span class="validate-color" asp-validation-for="Category"></span>
                        </div>
                        <div asp-validation-summary="All" class="validate-color"></div>

                        <div class="form-group">
                            <button type="submit" class="form-control btn btn-primary rounded submit px-3">Craete</button>
                        </div>
                 
                    </form>

                  
                </div>
            </div>
        </div>
    </div>

</section>



